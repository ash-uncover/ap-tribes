{
  "name": "tribes-server",
  "version": "1.0.0",
  "main": "index.ts",
  "dependencies": {
    "ap-utils-logger": "latest",
    "express": "latest",
    "mongoose": "latest",
    "ws": "latest"
  },
  "devDependencies": {
    "@types/ws": "latest",
    "@types/express": "latest",
    "@types/node": "latest",
    "eslint": "latest",
    "eslint-plugin-import": "latest",
    "nodemon": "latest",
    "ts-node": "latest",
    "typescript": "latest"
  },
  "scripts": {
    "start": "node --inspect=5858 -r ts-node/register ./src/index.ts",
    "watch": "nodemon --inspect './src/index'",
    "build": "tsc"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
